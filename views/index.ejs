<table>
  <tr>
    <td><b>Name</b></td>
    <td><b>Image</b></td>
    <td><b>Rarity</b></td>
    <td><b>Description</b></td>
    <td><b>Rules</b></td>
    <td><b>Type (Subtype)</b></td>
  </tr>
  <% items.forEach((item, index)=>{ %>
  <tr>
    <td><b><a href="/items/<%= item.id %>" target="_blank"><%= item.name %></b></a></td>
    <td>
      <a href="/items/<%= item.id %>" target="_blank">
        <% { %> <% if (item.image){ %>
        <img
          src="/images/<%= item.image %>"
          alt="Image of <%= item.name %>"
          style="max-width: 150px"
        />
        <% } else { %>
        <img
          src="/images/itemBox.png"
          alt="Image of <%= item.name %>"
          style="max-width: 150px"
        />
        <% } %> <% } %>
      </a>
    </td>
    <td><%= rarityChart[item.rarity] %></td>
   
    <td><i><%= item.description %></i></td>
    <td><%= item.rules %></td>
    <td><i><%= item.type %> <% if (item.subtype) {%>(<%= item.subtype%>)<% } %></i></td>
    <td><a href="/items/<%= item.id %>/edit">edit me</a></td>
    <td><form action="/items/<%= item.id %>?_method=DELETE" method="POST">
      <input type="submit" value="DELETE" />
    </form></td>
  </tr>
  <% }) %>
</table>
