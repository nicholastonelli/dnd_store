<h1>Generate a Shop</h1>

<img src="/images/storefront.png" alt="A picture of a fantasy storefront" style="max-width:700px;display:block; margin-left: auto;margin-right: auto;"/>

<form method="POST" action="findshop/shop">
  <label for="location">Location:</label>
  <select class="location" id="location" name="location">
    <option value="10">Village</option>
    <option value="20">Town</option>
    <option value="30">City</option>
    <option value="50">Metropolis</option>
    <option value="100000">See All Items</option>
  </select>

  <label for="type">Type:</label>
  <select id="type" name="type">
    <option value='Weapon'>Weaponsmith</option>
    <option value="Armor">Armorer</option>
    <option value="Wondrous item">Mage Shop</option>
    <option value="Potion">Alchemists</option>
    <option value="Scroll">Scribe</option>
    <option value="Trader">Trader</option>
  </select>

  <label for="rarity">Highest Rarity:</label>
  <select id="rarity" name="rarity">
    <option value="0">Common, Nearly No Magic</option>
    <option value="1">Uncommon, Low Magic</option>
    <option value="2">Rare, Standard 5e</option>
    <option value="3">Very Rare</option>
    <option value="4">Legendary</option>
    <option value="5">Artifacts</option>
  </select>

  <input type="submit" value="submit" />
</form>
