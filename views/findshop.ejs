<h1>Generate a Shop</h1>

<img src="/images/storefront.png" alt="A picture of a fantasy storefront" />

<form method="POST" action="findshop/shop">
  <label for="location">Location:</label>
  <select class='location'id="location" name="location">
    <option value="trader">Wandering Trader</option>
    <option value="merchant">Road Merchant</option>
    <option value="village">Village</option>
    <option value="town">Town</option>
    <option value="city">City</option>
    <option value="metropolis">Metropolis</option>
  </select>

  <label for="type">Type:</label>
  <select id="type" name="type">
    <option value="weapon">Armory</option>
    <option value="wondrous item">Mage Shop</option>
    <option value="potion">Alchemists</option>
    <option value="scroll">Scribe</option>
    <option value="">Trader</option>
  </select>
  <input type="submit" value="submit">
</form>


